<h1>Update the Task:</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label @task.completed ? 'This task is completed' : 'This task is not completed yet' %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
